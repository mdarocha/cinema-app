@using CinemaApp.Models
@model LoginViewModel
@{
    ViewBag.Title = AppStrings.Login;
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-group", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@AppStrings.Login</h4>
    <hr />
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "invalid-feedback" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "invalid-feedback" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "invalid-feedback" })
    </div>
    <div class="form-group">
        <div class="form-check">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="@AppStrings.Login" class="btn btn-primary"/>
        @Html.ActionLink(AppStrings.ForgotPasswordQuestion, "ForgotPassword", null, new { @class = "btn btn-sm btn-outline-light" })
        @Html.ActionLink(AppStrings.Register, "Register", null, new { @class = "btn btn-sm btn-outline-light" })
    </div> 
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}