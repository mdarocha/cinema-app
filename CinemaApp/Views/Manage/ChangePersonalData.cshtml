@model ChangePersonalDataViewModel
@{
    ViewBag.Title = Strings.ChangePersonalData;
}

@using (Html.BeginForm("ChangePersonalData", "Manage", FormMethod.Post, new { @class = "", role = "form" }))
{
    <h4>@Strings.ChangePersonalData</h4>
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class="alert alert-danger"})
    <div class="row">
        <div class="col-md-6 form-group">
            @Html.LabelFor(m => m.Name)
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control"}})
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "invalid-feedback" })
        </div>
        <div class="col-md-6 form-group">
            @Html.LabelFor(m => m.Surname)
            @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control"}})
            @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "invalid-feedback" })
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="@Strings.ChangePersonalData" class="btn btn-primary" />
    </div>
}

